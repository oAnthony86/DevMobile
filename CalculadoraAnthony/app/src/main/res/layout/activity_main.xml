<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/valor_0"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/virgula"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text=","
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/valor_0" />

    <Button
        android:id="@+id/igual"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="="
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/virgula" />

    <Button
        android:id="@+id/valor_1"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/valor_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/valor_2"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/valor_0"
        app:layout_constraintStart_toEndOf="@+id/valor_1" />

    <Button
        android:id="@+id/valor_3"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/virgula"
        app:layout_constraintStart_toEndOf="@+id/valor_2" />

    <Button
        android:id="@+id/soma"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/igual"
        app:layout_constraintStart_toEndOf="@+id/valor_3" />

    <Button
        android:id="@+id/valor_4"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/valor_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/valor_5"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/valor_2"
        app:layout_constraintStart_toEndOf="@+id/valor_4" />

    <Button
        android:id="@+id/valor_6"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/valor_3"
        app:layout_constraintStart_toEndOf="@+id/valor_5" />

    <Button
        android:id="@+id/subtrai"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/soma"
        app:layout_constraintStart_toEndOf="@+id/valor_6" />

    <Button
        android:id="@+id/valor_7"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/valor_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/valor_8"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/valor_5"
        app:layout_constraintStart_toEndOf="@+id/valor_7" />

    <Button
        android:id="@+id/valor_9"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/valor_6"
        app:layout_constraintStart_toEndOf="@+id/valor_8" />

    <Button
        android:id="@+id/multiplica"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/subtrai"
        app:layout_constraintStart_toEndOf="@+id/valor_9" />

    <Button
        android:id="@+id/reseta"
        android:layout_width="119dp"
        android:layout_height="51dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="20dp"
        android:text="AC"
        app:layout_constraintBottom_toTopOf="@+id/valor_7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/porcentagem"
        android:layout_width="119dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@+id/valor_8"
        app:layout_constraintStart_toEndOf="@+id/reseta" />

    <Button
        android:id="@+id/divide"
        android:layout_width="119dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/valor_9"
        app:layout_constraintStart_toEndOf="@+id/porcentagem" />

    <TextView
        android:id="@+id/imprimeResultado"
        android:layout_width="377dp"
        android:layout_height="92dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="241dp" />
</androidx.constraintlayout.widget.ConstraintLayout>